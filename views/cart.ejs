<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="./css/cart.css">
</head>

<body>
    <div class="navbar container">
        <div class="brand">
            <h1>WatchStore</h1>
        </div>
        <div class="navMenu">
            <ul>
                <li>
                    <a href="/cart">Cart</a>
                </li>

                <li>
                    <a href="/signup">Signup</a>
                </li>

                <li>
                    <a href="/login">Login</a>
                </li>

                <li>
                    <a href="/">Home</a>
                </li>
            </ul>
        </div>


        <div class="hamburger">
            <i class="fal fa-bars hamburger_img"></i>
        </div>
    </div>

    <div class="hamburger_navMenu">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="login">Login</a></li>
            <li><a href="/signup">SignUp</a></li>
            <li><a href="/cart">Cart</a></li>
        </ul>
    </div>

    <div class="table_div">


        <%if(session.cart){%>
            <div class="row">
                <div class="product_details">
                    <h3>Product Details</h3>
                </div>
                <div class="product_qty">
                    <h3>Product Quantity</h3>
                </div>
                <div class="product_price">
                    <h3>Product Price</h3>
                </div>
            </div>
            <%for(let product of Object.values(session.cart.items)){%>
                <div class="row">
                    <div class="product_details">
                        <img src="<%=product.item.img%>" alt="">
                        <h4>
                            <%=product.item.name%>
                        </h4>
                        <h5>
                            $<%=product.item.price%>
                        </h5>
                        <button class="remove_btn">Remove Item</button>
                    </div>
                    <div class="product_qty">
                        <h4>
                            <%=product.qty%>
                        </h4>
                    </div>
                    <div class="product_price">
                        <h4>
                            $<%=product.item.price * product.qty%>
                        </h4>
                    </div>
                </div>
                <%}%>
                    <hr>
                    <div class="total_amount">
                        <h3>Total Amount : <span>$<%=session.cart.totalPrice%></span>
                        </h3>
                    </div>

                    <%if(session.user){%>
                        <div class="place_order">
                            <h3>Placed Your Order...</h3>
                            <form action="/order" method="POST">
                                <input type="text" name="address" placeholder="Address" required>
                                <input type="number" name="phone" placeholder="Phone No." required>
                                <button type="submit">Order</button>
                            </form>
                        </div>
                        <%}else{%>
                            <div class="login_to_order">
                                <a href="/login">Login to order</a>
                            </div>

                            <%}%>
                                <% }else{%>

                                    <div class="empty_cart">
                                        <img src="./img/empty_cart.png" alt="Empty cart">
                                        <h1>Your cart is empty</h1>
                                    </div>

                                    <%}%>
    </div>



    <div class="footer_block container">
        <div class="copyright">
            <h3>copyright@2020company name</h3>
        </div>
    </div>

    <script src="/js/hamburger.js"></script>
</body>

</html>