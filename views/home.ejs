<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/home.css">
</head>

<body>
    <div class="navbar container">
        <div class="brand">
            <h1>AshWatchStore</h1>
        </div>
        <div class="navMenu">
            <ul>
                <li>
                    <a href="/cart">Cart</a>
                </li>

                <li>
                    <a href="/signup">Signup</a>
                </li>

                <li>
                    <a href="/login">Login</a>
                </li>

                <li>
                    <a href="/">Home</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="banner container">

        <div class="textBlock">
            <h1>Great Prices on all your favorite items</h1>
            <button class="banner_btn">
                Shop Now
            </button>
        </div>
    </div>


    <div class="banner_block">
        <div class="container">
            <div class="banner1">
                <div class="text_block">
                    <span>Holiday Deal</span>
                    <h1>
                        Upto 80% off
                    </h1>
                    <button class="banner2_btn">Shop</button>
                </div>
            </div>
            <div class="banner2">
                <div class="text_block">
                    <span>Mens Watch</span>
                    <h1>
                        Top Watch Brands
                    </h1>
                    <button class="banner2_btn">Shop</button>
                </div>
            </div>
        </div>
    </div>

    <div class="title container">
        <h1>Best Products</h1>
    </div>


    <div class="products container">
        <div class="product_row">
            <% if(products){%>

                <% products.forEach((product)=>{%>

                    <div class="product">
                        <div class="product_img">
                            <img src="<%=product.img%>" alt="" srcset="" />
                        </div>
                        <span>
                            <%=product.name%>
                        </span>
                        <h4 class="product_price">
                            $ <%=product.price%>
                        </h4>
                        <button data-product="<%=JSON.stringify(product)%>" class="cart_btn">Add to cart</button>
                    </div>


                    <% }) %>
                        <%} %>



        </div>
    </div>


    <div class="footer_block container">
        <div class="copyright">
            <h3>copyright@2020company name</h3>
        </div>
    </div>

    <link rel="stylesheet" href="./css/home.css">
    <script src="./js/home.js"></script>
</body>

</html>